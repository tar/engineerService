	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/jsp/redirect.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/redirect.html</url-pattern>
    </servlet-mapping>		

    <servlet>
        <servlet-name>redirect</servlet-name>
        <jsp-file>/jsp/redirect.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>redirect</servlet-name>
        <url-pattern>/redirect.html</url-pattern>
    </servlet-mapping>		

 	<error-page>
    	<error-code>404</error-code>
    	<location>/redirect.html</location>
	</error-page>
    
</web-app>
